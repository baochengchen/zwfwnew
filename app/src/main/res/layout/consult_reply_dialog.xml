<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/large_text_size"
        android:text="回复"
        android:textColor="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/dodgerblue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/normal_text_size"
        android:text="处理意见"
        android:textColor="@color/dodgerblue"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dimgrey" />

    <EditText
        android:id="@+id/reply_edt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="3dp"
        android:layout_margin="7dp"
        android:textSize="@dimen/normal_text_size"
        android:background="@drawable/custom_edit_corner_bg"
        android:hint="意见"
        android:gravity="left|top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="7dp">

        <Button
            android:id="@+id/positive_bt"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="确定"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/blue_edit_corner_bg"/>

        <Button
            android:id="@+id/negative_bt"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="取消"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/custom_edit_corner_bg"/>

    </LinearLayout>

</LinearLayout>