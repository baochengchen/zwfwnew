<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ztesoft.zwfw.moudle.MainActivity">

    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_tab_height">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_tab_height"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/sy_ft"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_wdbj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="21dp">

            <ImageView
                android:id="@+id/img_wdbj"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_wdbj" />

            <TextView
                android:id="@+id/tab_text_wdbj"
                style="@style/navigation_text"
                android:text="@string/approve_center" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_personal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="21dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_grzx"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_grzx"/>
            <TextView
                style="@style/navigation_text"
                android:text="@string/person_center"
                android:id="@+id/tab_text_personal" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sy_an"
        android:id="@+id/tab_home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
